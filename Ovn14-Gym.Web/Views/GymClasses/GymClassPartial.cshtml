@model Ovn14_Gym.Core.Entities.GymClass


<tr>
    <td>
        @if (User.IsInRole("Member"))
        {
            <a asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a>
        }
        else
        {
            @Html.DisplayFor(modelItem => modelItem.Name)
        }
    </td>
    <td>
        @Html.DisplayFor(modelItem => modelItem.StartTime)
    </td>
    <td>
        @Html.DisplayFor(modelItem => modelItem.Duration)
    </td>
    <td>
        @Html.DisplayFor(modelItem => modelItem.Description)
    </td>
    <td>
        @if (User.IsInRole("Member"))
        {
            <a asp-action="BookingToggle" asp-route-id="@Model.Id">Book</a>
        }

        @*            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |*@
    </td>
</tr>

